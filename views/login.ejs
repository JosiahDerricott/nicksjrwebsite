<%- include("partials/header") %>

  <body style="background-color: #f5eded">
    <section id="login">
      <div class="admin-welcome">
        <div class="container-fluid padding text-center">
          <h1>Admin Login</h1>
        </div>
      </div>

      <div class="row">
        <div class="col content-center login-form">
          <form action="/login" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="username" placeholder="Username" value="">
            </div>

            <div class="form-group">
              <input type="password" class="form-control" name="password" placeholder="Password" value="">
            </div>

            <div class="form-group content-center">
              <button class="btn btn-dark btn-lg btn-pad border border-danger" type="submit" name="button">Login</button>
            </div>
          </form>
        </div>
      </div>

      <div class="row text-center">
        <div class="col">
          <a href="/"><button type="button" class="btn btn-dark btn-lg btn-pad border border-danger">Return Home</button></a>
        </div>
      </div>
    </section>
  </body>
</html>
